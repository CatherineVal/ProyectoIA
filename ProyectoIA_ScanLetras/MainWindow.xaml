<Window x:Class="ProyectoIA_ScanLetras.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoIA_ScanLetras"
        mc:Ignorable="d"
        Title="ProyectoIA" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#0379cc">
            <Label Content="Entrada 1" Foreground="White"></Label>
            <TextBox Margin="5,0" Name="txt1"></TextBox>
            <Label Content="Entrada 2" Foreground="White"></Label>
            <TextBox Margin="5,0" Name="txt2"></TextBox>
            <Label Content="Activacion" Foreground="White"></Label>
            <TextBlock Name="txt3"></TextBlock>
            <Button Content="Calcular Salida" Foreground="White" Background="{x:Null}" Height="30" Click="Button_Click"/>
            <Button Margin="0,5" Click="Entrenar" Background="{x:Null}">Entrenar</Button>
        </StackPanel>

        <ScrollViewer Grid.Column="1">
            <TextBlock  Name="salida" TextWrapping="Wrap"></TextBlock>
        </ScrollViewer>
    </Grid>
</Window>
